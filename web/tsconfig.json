{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/utils": ["./src/lib/utils"],
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./src/components/*"],
      "@/routes/*": ["./src/routes/*"]
    }
  },
  "include": [
    "src",
    "lib/api.ts",
    "lib/api-base.ts",
    "lib/types.ts",
    "lib/auth/**/*.ts",
    "vite.config.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib/__tests__/**",
    "lib/events/**",
    "lib/mocks/**",
    "lib/auth/**/*.test.ts"
  ]
}
