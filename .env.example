# ALEX SSE Service Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Configuration
ALEX_MODEL=gpt-4
ALEX_VERBOSE=false

# Sandbox Configuration
ALEX_SANDBOX_BASE_URL=http://localhost:8090

# Redis Configuration (optional)
REDIS_URL=

# Authentication (optional)
AUTH_JWT_SECRET=dev-secret-change-me
AUTH_ACCESS_TOKEN_TTL_MINUTES=15
AUTH_REFRESH_TOKEN_TTL_DAYS=30
AUTH_REDIRECT_BASE_URL=http://localhost:8080
AUTH_DATABASE_URL=postgres://alex:alex@localhost:5432/alex_auth?sslmode=disable
AUTH_DB_USER=alex
AUTH_DB_PASSWORD=alex
AUTH_DB_NAME=alex_auth
AUTH_DB_PORT=5432
# GOOGLE_CLIENT_ID=
# WECHAT_APP_ID=

# China Mirror Configuration (uncomment to enable faster builds)

# Use pre-built China sandbox image (recommended for China mainland)
# No build required - much faster startup!
# SANDBOX_IMAGE=enterprise-public-cn-beijing.cr.volces.com/vefaas-public/all-in-one-sandbox:latest
# SANDBOX_SECURITY_OPT=seccomp=unconfined

# NPM Registry (only needed if USE_CHINA_SANDBOX=false)
# NPM_REGISTRY=https://registry.npmmirror.com/

# PyPI Mirror (only needed if USE_CHINA_SANDBOX=false)
# PIP_INDEX_URL=https://pypi.tuna.tsinghua.edu.cn/simple

# Alternative mirrors:
# - NPM: https://mirrors.cloud.tencent.com/npm/
# - PyPI: https://mirrors.aliyun.com/pypi/simple/

# Frontend/internal feature toggles
NEXT_PUBLIC_INTERNAL_AUTO_REVIEW=0
